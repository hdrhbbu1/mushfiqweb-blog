{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [      
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/todo/**",
        "destination": "/todo/index.html"
      }
    ]
  }
}
